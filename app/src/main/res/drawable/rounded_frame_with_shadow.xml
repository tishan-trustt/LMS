<!-- res/drawable/right_bubble_chat_with_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#29000000"/> <!-- Adjust the shadow color and opacity -->
            <corners android:radius="40dp"/> <!-- Adjust the radius as per your preference -->
        </shape>
    </item>
    <!-- Content Background -->
    <item android:top="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="40dp"/> <!-- Adjust the radius as per your preference -->
        </shape>
    </item>
</layer-list>
